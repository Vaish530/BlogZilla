              <a class="nav-link" href="/user/logout">logout</a>
            </li>
             
           
           
            
            </ul>
          </li> 
           
          <% } else {%>
            <a class="nav-link" href="/login">Login/signup</a>
            <% } %>
          
         
          
        </div>
      </div>
    </div>
  </nav>
</nav>
<% if (locals.message) { %>
  <div class=" container alert alert-success my-4"><%= message %></div>
 
<% } %>
<% if (locals.error) { %>
  <div class=" container alert alert-danger my-4"><%= error %></div>
 
<% } %>
