<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/css/bootstrap") %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
  <style>
    .blogs-container
    {
      display:grid;
      grid-template-columns:repeat(3,auto);
      gap:20px;
      grid-auto-flow:row;
    }
  </style>
</head>
<body>
  <%- include("./partials/components/nav") %>
   <div class="container">
  <div class="blogs-container mt-5">
    <% blogs.forEach(blog => { %>
      <div class="card mx-2 col" style="width: 100%">
        <img src="/uploads/<%= blog.
       coverImage%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
         <p><%= blog.views %> view(s)</p>
          <a href="/blog/view/<%= blog._id%>" class="btn btn-primary">View</a>
        </div>
      </div>
    <% }) %>
  </div>
   </div>
   
  

 
 

  <%- include("./partials/js/bootstrap") %>
</body>
</html>